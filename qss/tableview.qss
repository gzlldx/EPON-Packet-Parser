
QHeaderView::section {
    font: 9pt "Microsoft YaHei UI";
    height: 21px;
    background-color: #705070;
    color: white;
    padding-left: 0px;
    border: 1px solid #c0c0c0;
}

QHeaderView::section:horizontal:hover {
    color: white;
    background-color: #905090;
}

QHeaderView::section:horizontal:pressed {
    color: #fed81f; /* 佛手黄 */
    background-color: #505090;
}

