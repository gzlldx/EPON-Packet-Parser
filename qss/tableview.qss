QTableView {
    font: 9pt "consolas";
    color: #e0e0e0;
    background-color: #404040;
    alternate-background-color: #4a4a4a; /* 交替颜色（需要设置tableview->setAlternatingRowColors(true)） */
    gridline-color: transparent;         /* 表格线颜色 */
    selection-color: #f0f0f0;            /* 选中前景色 */
    selection-background-color:#5070a0;
    outline: none;
}

QTableView:item {
    padding: 0px;
}

QTableView:item:selected {
    color: #f0f0f0;
    background-color: #5070a0;
}

QTableView:item:hover {
    color: #fed81f;
    background-color: #6080d0;
    border: 1px solid #c0c0c0;
    border-radius:2px;
}

